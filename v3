#include <stdio.h>
#include <string.h>
int main()
{
   char strExp[]="2+2*3+2/2-1";
   char str[100];
   for(int i=0;i<strlen(strExp);i++)
   {
	   if(strExp[i]!='*'||strExp[i]!='/')
 {
	 str[i]=strExp[i];
 }

	   if(strExp[i]=='*')
	   {
		   int c=(strExp[i-1]-'0')*(strExp[i+1]-'0');
		   str[i-1]=c+'0';
	   }
 if(strExp[i]=='/')
	   {
		   int b=(strExp[i-1]-'0')/(strExp[i+1]-'0');
		   str[i-1]=b+'0';
	   }
 
   }
   int sum=str[0]-'0';
for(int j=0;j<strlen(strExp);j++)
{
	
	if(str[j]=='+')
	{
sum=sum+(str[j+1]-'0');
	}
	if(str[j]=='-')
	{
		sum=sum-(str[j+1]-'0');
	}
}
printf("ох╬ф:%d\n",sum);
	   
	return 0;
}
